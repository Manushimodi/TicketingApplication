<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TicketCreateActivity"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

    <EditText
            android:id="@+id/et_tickettitle_ticketcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ticket title"
            android:layout_marginHorizontal="10dp"/>

    <EditText
            android:id="@+id/et_ticketdesc_ticketcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ticket description"
            android:lines="4"
            android:maxLines="4"
            android:inputType="textMultiLine"
            android:layout_marginHorizontal="10dp"/>


    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_ticketcategory_ticketcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:tooltipText="mane nah khabar"
            android:layout_marginTop="37dp"
            android:overlapAnchor="false">
    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_ticketdepartment_ticketcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:tooltipText="mane nah khabar"
            android:layout_marginTop="37dp">

    </android.support.v7.widget.AppCompatSpinner>

    <Button
            android:id="@+id/btn_ticketcreate_ticketcreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="10dp"
            android:text="Create Ticket"
            android:background="@color/colorPrimaryDark"/>

</LinearLayout>